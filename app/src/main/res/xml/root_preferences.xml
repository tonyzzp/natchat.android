<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="设置">

        <EditTextPreference
            app:iconSpaceReserved="false"
            app:key="server_host"
            app:title="服务器地址"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:iconSpaceReserved="false"
            app:key="server_port"
            app:title="服务器端口"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:iconSpaceReserved="false"
            app:key="name"
            app:title="昵称"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="其他">
        <SwitchPreference
            android:defaultValue="false"
            android:key="upnp"
            android:title="使用upnp端口映射"
            app:iconSpaceReserved="false" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="log"
            app:title="查看日志" />
    </PreferenceCategory>

</PreferenceScreen>